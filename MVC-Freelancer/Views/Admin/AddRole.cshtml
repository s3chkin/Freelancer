@model MVC_Freelancer.Models.AddRoleViewModel

<h1>Добави роля</h1>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div>
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <button type="submit" class="btn btn-primary">dobavi rolya</button>
   
        <div>
            <a asp-action="ListAllroles" class="btn btn-warning my-3">back</a>
        </div>
    </div>
</form>