@model MVC_Freelancer.Models.InputCategoryModel

@{
    ViewData["Title"] = "Категории - ";
}
<br><br><br><br>
<div class="d-flex justify-content-center">
    <div>
        <h4 class="d-flex justify-content-center">Добавяне на категория</h4>
        <br>
        <div>
            <div >
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name " class="control-label">Категория:</label>
                        <input asp-for="Name" placeholder="front-end/ back-end..." class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br>

                    <div class="d-flex justify-content-center" >
                    <div>
                        <input type="submit" value="Добави" class="btn btn-success" />
                    </div>
                    </div>
                </form>
            </div>
        </div>
        <br>
        <div class="d-flex justify-content-center">
            <a asp-action="Index" class="btn btn-warning">Обратно към списъка с категории</a>
        </div>
    </div>
</div>
<br>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

