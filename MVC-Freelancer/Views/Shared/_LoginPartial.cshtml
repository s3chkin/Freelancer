@using MVC_Freelancer.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@*@model MVC_Freelancer.Models.InputAppUserModel*@

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
       

        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Job" asp-action="Messages" title="AdminPanel"><i class="fa-solid fa-screwdriver-wrench" style="font-size:25px; margin-left:10px;"></i></a>
            </li>
        }
        


        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage"><i class="fa-solid fa-user" style="font-size:25px; margin-left:10px;"></i></a>

        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark"><i class="fa-solid fa-right-from-bracket" style="font-size:25px; margin-left:10px;"></i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
        <li>
            <div> <i style="font-size:25px; margin-left:10px;" class="fas fa-search"></i></div>
        </li>
    }
</ul>
