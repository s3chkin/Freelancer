<form style="display:grid; place-items:center;" method="post" enctype="multipart/form-data">

    <label for="WorkType">Изберете:</label>
    <select style="width: 600px; height:55px;" asp-for="WorkType" name="WorkType" >
        <option value="Предлагам">Предлагам</option>
        <option value="Търся">Търся</option>
    </select>



    <img style="width:560px; margin-top:80px;" src="~/ImageRepository/undraw_add_tasks_re_s5yj.svg">
    <br><br>
    <div class="form-group" style="display:none;">
        <label asp-for="Progress" class="control-label"></label>
        <input asp-for="Progress" class="form-control" value="null" id="jobProgress " />
        <span asp-validation-for="Progress" class="text-danger"></span>
    </div>

    <div class="form-group" style="display:none;">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" value="True" id="jobProgress " />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Какво предлагаш? <span style="color:red; font-size:20px;">*</span></label>
        <input asp-for="Name" maxlength="25" id="jobInfo" class="form-control" placeholder="Например: Сайт за бизнес/ Фиксиране на грешки... " />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeadLine" class="control-label">Срок <span style="color:red; font-size:20px;">*</span></label>
        <input type="date" value="@Model.DeadLine.Date" asp-for="DeadLine" style="width: 600px;height: 55px;margin-bottom: 20px; id="jobInfo" class="form-control" />
        <span asp-validation-for="DeadLine" class="text-danger"></span>
    </div>

    <div class="form-group">


        <label asp-for="Price" class="control-label">Цена <span style="color:red; font-size:20px;">*</span></label>
        <input asp-for="Price" id="jobPrice" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <br>
    <img width="560px;" src="~/ImageRepository/undraw_project_complete_lwss.svg">
    <br><br>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание <span style="color:red; font-size:20px;">*</span></label>
        <textarea asp-for="Description" id="jobDescription" class="form-control" placeholder="Аз мога да направя... (подробна информация)"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>



    <div class="form-group" style="display:none;">
        <label asp-for="Progress" class="control-label"></label>
        <input asp-for="Progress" class="form-control" value="null" id="jobProgress " />
        <span asp-validation-for="Progress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Категория <span style="color:red; font-size:20px;">*</span></label>
        <div>
            <select class="float-left" style="margin-right:30px; " asp-for="CategoryId" id="jobCategory" class="form-control" asp-items="@Model.Categories"></select>
            <a asp-controller="Category" asp-action="Add" style="height:55px; width:55px; font-size:32px;" title="Добави нова категория">
                +
            </a>
        </div>

    </div>
    <br>

    <div class="form-group">
        <div style="text-align:center;">
            <label asp-for="CategoryId" class="control-label">Снимка <span style="color:red; font-size:20px;">*</span></label>
        </div>
        <label asp-for="Image" class="control-label" style="display:none;"></label>
        @*<input asp-for="Image" type="file"  class="form-control" id="jobImg"/>*@
        <input asp-for="Image" style="display:none;" type="file" id="file" />
        <label id="file2" onclick="func()" for="file" style="display:grid; place-items:center; cursor:pointer;"><i id="imgLogo2" class="bi bi-check" style="display:none;"></i><i class="bi bi-camera" id="imgLogo1"></i></label>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <br>

    <div class="d-flex justify-content-center">
        <div style="width:1100px; margin-top:80px;">


            <div id="tableContainer">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="tableTh"></th>
                            <th scope="col" class="tableTh"><h1>Pro</h1></th>
                            <th scope="col" class="tableTh"><h1>Standart</h1></th>
                            <th scope="col" class="tableTh"><h1>Basic</h1></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">

                            </th>
                            <td>
                                <div class="form-group">
                                    <input style="border:none; width:100%; height:100%;" asp-for="PackageName " id="PackageName1" class="form-control" placeholder="Наименование на пакета ">
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <input style="border:none; width:100%; height:100%;" asp-for="PackageName2" id="PackageName1" class="form-control" placeholder="Наименование на пакета">
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
