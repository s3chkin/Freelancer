<br>

<div class=" d-flex flex-wrap justify-content-around ">
    @if (Model.Any())
    {
        <h5><i><b>Приети:</b></i> </h5>
        
        <div style=" width:1500px; margin-top:60px;">


            @foreach (var item in Model)
            {

                <div class="container container2 float-left" style="">
                    <div class="card-sl ">
                        <div class="card-image">
                            <img id="image" height="220px;" src="@item.ImgURL" />
                        </div>

                        <div class="card-heading">
                            @item.Name
                        </div>
                        <div class="card-text">
                            <div class="skills">
                                <div style="padding-bottom: 40px;">
                                    <div>
                                        <p style="float: left;">Напредък (Прогрес)</p>
                                        <p style="float: right;">@item.Progress%</p>
                                    </div>
                                </div>
                                <form method="post" asp-action="Progress">
                                    <input asp-for="@item.Progress">
                                    <input type="submit" value="ok" />
                                </form>
                                <br>

                                <div class="progress">
                                    <div class="progress-bar" style="width:@item.Progress%; "></div>



                                    @if (item.Progress <= 30)
                                    {
                                        <style>
                                            .progress-bar {
                                                background-color: red;
                                            }
                                        </style>

                                    }
                                    else if (item.Progress >= 31 && item.Progress <= 60)
                                    {
                                        <style>
                                            .progress-bar {
                                                background-color: yellow;
                                            }
                                        </style>
                                    }
                                    else if (item.Progress >= 61)
                                    {
                                        <style>
                                            .progress-bar {
                                                background-color: green;
                                            }
                                        </style>
                                    }
                                </div>

                                @if (item.Progress <= 30)
                                {
                                    <p>Стартиране</p>
                                }
                                else if (item.Progress >= 61)
                                {
                                    <p>Приключване</p>
                                }

                            </div>
                        </div>
                        <div class="card-text">
                            <p class="float-start">@item.Price <i>BGN</i></p>
                        </div>
                        <br><br>
                        <div class="card-text">
                            <div class="float-end">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="btn btn-danger" id="refuseBtn" onclick="refuse(@item.Id+'-cancel')">Отказвам</button>
                            </div>
                            <form id="@(item.Id+"-cancel")" method="post" asp-action="Refuse" style="display:none">
                                <input name="id" value="@item.Id" type="hidden">
                            </form>
                            <div class="float-start">
                                <button class="btn btn-success" id="refuseBtn">Предавам</button>
                            </div>
                            <br>
                        </div>


                        <br>
                        <a asp-action="ById" asp-route-id="@item.Id" class="card-button"> Детайли</a>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center">
            <div>

                <div class="d-flex justify-content-center">
                    <h3>
                        <b>
                            <i>Няма приети поръчки!</i>
                        </b>
                    </h3>
                </div>
                <br><br><br>
                <div class="d-flex justify-content-center">
                    <img src="~/ImageRepository/undraw_software_engineer_re_tnjc.svg" style="width:400px;">
                </div>
                <br></br>
                <br></br>

                <div class="d-flex justify-content-center">
                    <h4>
                        <b>
                            <i>Приетите от вас поръчки, се появяват тук!</i>
                        </b>
                    </h4>
                </div>
                <br></br>

            </div>
        </div>
    }
</div>
<style>

    .progress {
        height: 10px;
        border-radius: 0px;
    }

    .skills {
        padding-top: 25px;
    }
