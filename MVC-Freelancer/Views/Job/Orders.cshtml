@model IEnumerable<MVC_Freelancer.Models.InputJobModel>

<section class="header-section page-header" style="margin-top:50px;">
    <div class="container">
        <div class="row section-gap">
            <div class="col-md-12">
                <h1 style="color:white;">Моите поръчки</h1>
            </div>
        </div>
    </div>
</section>
