@model MVC_Freelancer.Models.InputPackageModel
@{
    ViewData["Title"] = "AddPackage";
}

<h1>AddPackage</h1>


<form method="post" enctype="multipart/form-data">
    <div style=" margin-top:50px;">

        <div id="tableContainer">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col" class="tableTh"></th>
                        <th scope="col" class="tableTh"><h1>Pro</h1></th>
                        <th scope="col" class="tableTh"><h1>Standart</h1></th>
                        <th scope="col" class="tableTh"><h1>Basic</h1></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">

                        </th>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PackageName1" id="PackageName1" class="form-control" placeholder="Наименование на пакета">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PackageName2" id="PackageName1" class="form-control" placeholder="Наименование на пакета">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PackageName3" id="PackageName1" class="form-control" placeholder="Наименование на пакета">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Описание</th>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PacketDescription1" id="PacketDescription1" class="form-control" placeholder="Аз мога да направя... (подробна информация)">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PacketDescription2" id="PacketDescription2" class="form-control" placeholder="Аз мога да направя... (подробна информация)">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="PacketDescription3" id="PacketDescription3" class="form-control" placeholder="Аз мога да направя... (подробна информация)">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Време за предаване</th>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="DeliveryTime1" id="DeliveryTime1" class="form-control" placeholder="Време за предаване(дни)">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="DeliveryTime2" id="DeliveryTime2" class="form-control" placeholder="Време за предаване(дни)">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="DeliveryTime3" id="DeliveryTime3" class="form-control" placeholder="Време за предаване(дни)">
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">Ревизия</th>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Revision1" id="Revision1" class="form-control" placeholder="Цена на пакет 1">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Revision2" id="Revision2" class="form-control" placeholder="Цена на пакет 2">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Revision3" id="Revision3" class="form-control" placeholder="Цена на пакет 3">
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th scope="row">Цена</th>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Price1" id="Price1" class="form-control" placeholder="Цена на пакет 1">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Price2" id="Price2" class="form-control" placeholder="Цена на пакет 2">
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <input style="border:none;" asp-for="Price3" id="Price3" class="form-control" placeholder="Цена на пакет 3">
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <input class="site-btn" type="submit" value="Добави обява" />

</form>