@model ICollection<MVC_Freelancer.Models.InputJobModel>
<br>
<br>
<br>
<br>

<div class="d-flex justify-content-center">
     <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Други
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item active" asp-action="Myjobs">Моите обяви</a></li>
            <li><a class="dropdown-item" asp-action="BuildingJobs">В процес на разработка</a></li>
            <li><a class="dropdown-item" asp-action="FinishedJobs">Готови-получени</a></li>
            <li><a class="dropdown-item " asp-action="Expired">С изтекъл срок</a></li>
        </ul>
    </div>
</div>

<br>
@if (Model.Any())
{

    <h4 align="center">Моите обяви</h4>
    <br>
    <div class=" d-flex flex-wrap justify-content-around ">
        <div style=" width:1330px;">

            @foreach (var item in Model)
            {

                <div class="container container2 float-left" style="">
                    <div class="card-sl ">
                        <div class="card-image">
                            <img id="image" height="220px;" src="@item.ImgURL" width="100%" />
                        </div>

                        <div class="card-heading">
                            @item.Name
                        </div>
                        <div class="card-text">
                            Цената е @item.Price лева. За по-подробна информация
                            влезте в самата обява,<br> като натиснете бутона "детайли".
                        </div>

                        <div class="card-text">
                            <p class="float-start">@item.Price <i>BGN</i></p>
                            <p class="float-end">@item.WorkType </p>
                        </div>
                        <br>
                        <br>
                        <div class="d-flex justify-content-center">
                            @if (item.Finished == false)
                            {

                                @if (item.Status == false)
                                {
                                    <form method="post" asp-controller="Job" asp-action="Pause">
                                        <fieldset>
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning"><i class="fa-solid fa-play float-left"></i> </button>
                                        </fieldset>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-controller="Job" asp-action="Pause">
                                        <fieldset>
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning"><i class="fa-solid fa-pause float-left"></i> </button>
                                        </fieldset>
                                    </form>
                                }
                                <a asp-action="Edit" asp-controller="Job" asp-route-id="@item.Id">
                                    <button class=" btn btn-success" style="margin-left:5px; margin-right:5px;">
                                        <i class="requestEditBtn fa-solid fa-pencil float-left" style="color:white;"></i>
                                    </button>
                                </a>

                                <a asp-action="Delete" asp-controller="Job" asp-route-id="@item.Id">
                                    <button class="btn btn-danger">
                                        <i class="requestDeleteBtn fa-solid fa-trash-can float-left" style="  color:white;"></i>
                                    </button>
                                </a>

                            }

                        </div>

                        <br>
                        <a asp-action="ById" asp-route-id="@item.Id" class="card-button">Детайли</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <br>
    <br>
}
else
{
    <div class="d-flex justify-content-center">
        <div>

            <div class="d-flex justify-content-center">
                <h3>
                    <b>
                        <i>Нямате публикувани обяви!</i>
                    </b>
                </h3>
            </div>
            <br><br><br>
            <div class="d-flex justify-content-center">
                <img src="~/ImageRepository/undraw_online_resume_re_ru7s.svg" style="width:400px;">
            </div>
            <br></br><br>
            <div class="d-flex justify-content-center">
                <a asp-controller="Job" asp-action="add">
                    <button class="site-btn">
                        Добави обява
                    </button>
                </a>
            </div>
            <br>

        </div>
    </div>
}
<style>
    .progress {
        height: 10px;
        border-radius: 0px;
        width: 240px;
    }

    .skills {
        padding-top: 25px;
    }

    .container2 {
        margin-top: 20px;
        width: 25%;
    }

    @@media screen and (max-width: 1240px) {
        .container2 {
            width: 28%;
            justify-content: center;
            display: grid;
            align-items: center;
        }
    }

    @@media screen and (max-width: 1080px) {
        .container2 {
            width: 33%;
            justify-content: center;
        }
    }

    @@media screen and (max-width: 1000px) {
        .container2 {
            width: 40%;
