@model IEnumerable<MVC_Freelancer.Models.InputSendMailModel>

<br>
<br>
<br>
<br>

<div class="d-flex justify-content-center">
    <div>
        <a asp-controller="job" asp-action="messages" class="btn btn-warning">Съобщения</a>
    </div>
    <div style="margin-left:5px;">
        <a asp-controller="Admin" asp-action="UsersList" class="btn btn-success">Потребители</a>
    </div>
</div>
<br>

<table class="table" style="margin-left:30px;margin-right:30px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Email
            </th>
            <th>
                Заглавие
            </th>
            <th>
                Съобщение
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Subject
                </td>
                <td>
                    @item.Message
                </td>
            </tr>
        }
    </tbody>
</table>
