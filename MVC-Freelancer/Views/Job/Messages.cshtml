@model IEnumerable<MVC_Freelancer.Models.InputSendMailModel>

<br>
<br>
<br>
<br>

<div class="d-flex justify-content-center">
    <div>
        <a asp-controller="job" asp-action="messages" class="btn btn-warning">Съобщения</a>
    </div>
    <div style="margin-left:5px;">
        <a asp-controller="Admin" asp-action="UsersList" class="btn btn-success">Потребители</a>
    </div>
</div>
<br>

<div class="panel panel-primary" style="margin-left:30px;margin-right:30px;">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Съобщения от потребителите</b>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
            <thead>
                <tr>

                    <td><b>Име</b></td>
                    <td><b>Имейл</b></td>
                    <td><b>Заглавие</b></td>
                    <td><b>Съобщение</b></td>
                    <td><b>Опция</b></td>
                </tr>
            </thead>
            @foreach (var msg in Model)
            {
                <tr>

                    <td>@msg.Name</td>
                    <td>@msg.Email</td>
                    <td>@msg.Subject</td>
                    <td>@msg.Message</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="DeleteMsg" asp-route-id="@msg.Id">
                                <button class="btn btn-danger">
                                    <i class="requestDeleteBtn fa-solid fa-trash-can float-left" style="  color:white;"></i>
                                </button>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </table>
    </div>

</div>


