@model ICollection<MVC_Freelancer.Models.InputJobModel>
<br>
<br>
<br>
<br>

<div class="d-flex justify-content-center">
     <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Други
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item " asp-action="Myjobs">Моите обяви</a></li>
            <li><a class="dropdown-item" asp-action="FinishedJobs">В процес на разработка</a></li>
            <li><a class="dropdown-item" asp-action="BuildingJobs">Готови-получени</a></li>
            <li><a class="dropdown-item active" asp-action="Expired">С изтекъл срок</a></li>
        </ul>
    </div>
</div>
<br>
@if (Model.Any())
{
    <h5><i><b>Изтекъл срок:</b></i> </h5>
    <br>
    <div class=" d-flex flex-wrap justify-content-around ">
        <div style=" width:1330px;">
            <div style=" width:1330px;">

                @foreach (var item in Model)
                {

                    <div class="container container2 float-left" style="">
                        <div class="card-sl ">
                            <div class="card-image">
                                <img id="image" height="220px;" src="@item.ImgURL" width="100%" />
                            </div>

                            <div class="card-heading">
                                @item.Name
                            </div>
                            <div class="card-text">
                                Цената е @item.Price лева. За по-подробна информация
                                влезте в самата обява,<br> като натиснете бутона "детайли".
                            </div>
                            <div class="card-text">
                                <p class="float-start">@item.Price <i>BGN</i></p>

                            </div>
                            <br>
                            <br>
                            <div class="d-flex justify-content-center">
                                @if (item.Status == false)
                                {
                                    <form method="post" asp-action="Pause">
                                        <fieldset>
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning"><i class="fa-solid fa-play float-left"></i> </button>
                                        </fieldset>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Pause">
                                        <fieldset>
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning"><i class="fa-solid fa-pause float-left"></i> </button>
                                        </fieldset>
                                    </form>
                                }
                                <a asp-action="Edit" asp-route-id="@item.Id">
                                    <button class=" btn btn-success" style="margin-left:5px; margin-right:5px;">
                                        <i class="requestEditBtn fa-solid fa-pencil float-left" style="color:white;"></i>
                                    </button>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-danger">
                                        <i class="requestDeleteBtn fa-solid fa-trash-can float-left" style="  color:white;"></i>
                                    </button>
                                </a>

                            </div>

                            <br>
                            <a asp-action="ById" asp-route-id="@item.Id" class="card-button"> Детайли</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div >
        <div class="d-flex justify-content-center">
            <h3><i><b>Нямате обяви със стари дати!</b></i></h3>
        </div>
        <br><br><br>
        <div class="d-flex justify-content-center">
            <img src="~/ImageRepository/undraw_date_picker_re_r0p8 (1).svg" width="430px;">
        </div>
    </div>
}