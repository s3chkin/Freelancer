<style>
    #list {
        list-style: none;
    }

        #list li {
            text-align: center;
            /* line-height: 50px; */
            opacity: 0;
            margin-top: 90px;
            font-size: 40px;
            font-weight: 700;
            margin-right: 20px;
        }

            #list li:nth-child(2) {
                animation-delay: 0.5s;
            }

            #list li:nth-child(3) {
                animation-delay: 0.9s;
            }

            #list li:nth-child(4) {
                animation-delay: 2s;
            }


    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translate3d(0, -30%, 0);
        }

        to {
            opacity: 1;
            transform: translate3d(0, 10%, 10%);
        }

        0% {
            top: 0px;
        }

        25% {
            top: 200px;
        }

        75% {
            top: 50px
        }

        100% {
            top: 100px;
        }
    }

    .boxContainer {
        display: flex;
        width: 100%;
        justify-content: space-between;
        height: 465px;
    }

    .box-text {
        margin-top: 14px;
        margin-bottom: 25px;
        font-size: 14px;
        color: #8b95a1;
        padding-left: 20px;
        padding-right: 20px;
        transition: color 1s ease;
    }

    .box-img {
        margin-top: 30px;
        height: 140px;
        width: auto;
    }

    .boxes {
        padding-top: 20px;
        font-size: 18px;
        display: flex;
        align-items: center;
        flex-direction: column;
        width: 280px;
        height: 440px;
        border-radius: 10px;
        box-shadow: 0 0 10px 0 rgb(45 54 64 / 5%);
        border: 1px solid #eaedf2;
        background-color: #fff;
        transition: .2s;
        text-align: center;
    }

        .boxes:hover {
            width: 290px;
            height: 450px;
            color: black;
        }

