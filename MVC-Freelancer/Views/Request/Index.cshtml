@model IEnumerable<MVC_Freelancer.Models.InputRequestModel>

<br>
<br>
<br>
<br>
<div id="IndexBody">
    <div>
        <div class="float-start">
            <h4><b>Създайте специална заявка</b></h4>
            <p>Имате проблем с намирането на услуги или фрийленсъри?<br>Тогава създайде заявка и фрийленсърите да Ви намерят.</p>
        </div>
        <a class="float-end" id="newRequestBtn" asp-controller="Request" asp-action="Add"> Създай нова заявка</a>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="d-flex justify-content-center">
        <img width="400px;" src="/ImageRepository/undraw_accept_request_re_d81h.svg">
    </div>
    <br>
    <br>
    @foreach (var item in Model)
    {
        <div class="row d-flex justify-content-center">
            <div class="column">
                <div class="card">
                    <div>
                        <p class="float-start">Моята заявка</p>
                        <div class="float-end">
                            @if (item.DeadLine >= DateTime.Today)
                            {
                                <p id="progress" class="float-left">Публикувано</p>

                            }
                            else
                            {
                                <p id="progress2" class="float-left">Срокът е изтекъл</p>
                                
                            }
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="requestDeleteBtn fa-solid fa-trash-can float-left" style="margin-right: 10px;margin-left: 10px;"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="requestEditBtn fa-solid fa-pencil float-left"></i></a>
                        </div>
                    </div>
                    <h3 class="float-end">Заглавие: <b>@item.Title</b></h3>
                    <p>Описание: @item.Description</p>
                    <p>Бюджет: @item.Sum лева</p>
                    <p>Срок: @item.DeadLine.ToString("dd/MM/yyyy")</p>
                </div>
                <br><br>
            </div>
        </div>
    }
    <br>
    <br>
</div>
<style>
    #IndexBody {
        margin-left: 80px;
        margin-right: 80px;
    }

    body {
        background-color: none;
    }

    #newRequestBtn {
        background-color: #0a58ca;
        color: #ffffff;
        padding: 10px;
        border-radius: 8px;
    }

    #progress {
        border-radius: 7px;
        background-color: #2fb92f;
        padding: 3.5px;
    }

    #progress2 {
        border-radius: 7px;
        background-color: orangered;
        padding: 3.5px;
    }

    .requestDeleteBtn {
        width: 30px;
        height: 30px;
        background-color: red;
        color: white;
        display: grid;
        justify-content: center;
        align-content: center;
        cursor: pointer;
        font-size: 19px;
        border-radius: 4px;
    }

    .requestEditBtn {
        width: 30px;
        height: 30px;
        background-color: green;
        color: white;
        display: grid;
        justify-content: center;
        align-content: center;
        cursor: pointer;
        font-size: 19px;
        border-radius: 4px;
    }



    .column {
        float: left;
        width: 70%;
        padding: 0 10px;
    }

    .row {
        margin: 0 -5px;
    }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }

    @@media screen and (max-width: 600px) {
        .column {
            width: 100%;
            display: block;
            margin-bottom: 20px;
        }
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        padding: 16px;
        /*text-align: center;*/
        background-color: #0a58ca;
        color: white;
    }

</style>