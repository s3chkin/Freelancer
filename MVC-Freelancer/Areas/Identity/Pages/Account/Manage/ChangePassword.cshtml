@page
@model ChangePasswordModel
@*@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}*@

@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="d-flex justify-content-center" style="margin-right:400px;">
    <div>
        <form id="change-password-form" method="post">
            <h3 class="d-flex justify-content-center">Смяна на парола</h3>
            <br><h4 class="d-flex justify-content-center">@User.Identity.Name</h4>
            <br>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">Текуща парола</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">Нова парола</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <br></br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Повтори парола</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br></br>
            <div class="d-flex justify-content-center">
                <button type="submit" class=" btn btn-lg btn-primary" style="width:350px;">Запиши новата парола</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
